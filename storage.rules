rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 로고 업로드: 인증된 관리자만 업로드 가능, 모든 사용자가 읽기 가능
    match /logos/{allPaths=**} {
      allow read: if true; // 모든 사용자가 로고 이미지 조회 가능
      allow write: if request.auth != null && isAdmin(request.auth.token.email);
    }
    
    // 관리자 이메일 확인 함수
    function isAdmin(email) {
      return email in [
        'sjhk01@gmail.com', // 형의 Gmail 계정
        'admin@weareaiworkers.com'
      ];
    }
  }
}
